// Docs: https://dbml.dbdiagram.io/docs

Table user_info {
  user_id integer
  email varchar(100)
  phone integer(20)
  city varchar(50)
  state char(2)
  country char(2)
  address varchar(150)
}

Table player_info {
  user_id integer
  favorite_sport integer
  // TODO: Create a reference on the favorite position for a sport -> it can be one position to multiple sports
}

Table users {
  id integer [primary key]
  name varchar(80)
  nickname varchar(15)
  birthday date
  xp integer
  created_at timestamp
}

Table sports {
  // TODO: Should I store positions in some type of array or create different rows for different positions -> 5 rows for basketball: PG, SG, PF...?
  // TODO: Based on the last todo, rethink the favorite_sport on player_info table.
  id integer [primary key]
  name varchar(30)
  position varchar
}

Table games {
  id integer
  user_id integer
  sport integer
  game_time datetime
}


// USER INFORMATION RELATION
Ref personal_info: users.id - user_info.user_id // one-to-one

// PLAYER INFO RELATION
Ref player_info: users.id - player_info.user_id // one-to-one

// FAVORITE SPORT ON PLAYER INFO
Ref: player_info.favorite_sport - sports.id // one-to-one

// GAMES PLAYED BY USER RELATION
Ref played_games: games.sport > users.id  // many-to-one
